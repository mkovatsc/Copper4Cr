{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Copper Application",
  "manifest_version": 2,
  "version": "0.0.1",
  "description": "Talk to coap servers",
  "icons": {
    "16":  "resources/Cu_16.png",
    "24":  "resources/Cu_24.png",
    "32":  "resources/Cu_32.png",
    "48":  "resources/Cu_48.png",
    "128": "resources/Cu_64.png"
  },

  "app":{
      "background": {
        "scripts": [ "namespace.js",
                     "utils/Utils.js",
                     "utils/StringUtils.js",
                     "utils/LogUtil.js",
                     "utils/ConsoleLogger.js", 
                     "utils/Options.js",
                     "coap/ChromeUdpClient.js",
                     "coap/CoapMessage.js",
                     "coap/CoapMessageType.js", 
                     "coap/CoapMessageCode.js", 
                     "coap/CoapMessageOptionHeader.js",
                     "coap/CoapMessageOption.js",
                     "background.js" ]
      }
  },
    
  "sockets": {
    "udp": {
      "send": ["*"],
      "bind": ["*"]
    }
  }
}